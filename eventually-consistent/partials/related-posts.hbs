{{#get "posts" limit="5" filter="tags:[{{post.tags}}]+id:-{{post.id}}" as |related|}}
{{#foreach related}}
    {{#if @first}}
    <section class="related-wrapper gh-canvas">
        <h3 class="related-title">You might also like...</h3>
        <div class="related-feed">
    {{/if}}
            {{> "loop"}}
    {{#if @last}}
        </div>
    </section>
    {{/if}}
{{/foreach}}
{{/get}}

{{#get "posts" limit="5" filter="id:-{{post.id}}" order="published_at desc" as |latest|}}
{{#foreach latest}}
    {{#if @first}}
    <section class="related-wrapper related-fallback gh-canvas">
        <h3 class="related-title">Latest posts</h3>
        <div class="related-feed">
    {{/if}}
            {{> "loop"}}
    {{#if @last}}
        </div>
    </section>
    {{/if}}
{{/foreach}}
{{/get}}
