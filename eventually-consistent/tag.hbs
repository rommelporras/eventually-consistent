{{!< default}}

<main id="site-main" class="site-main">

    {{#tag}}
    <section class="tag">

        <div class="gh-canvas">

            <h1 class="tag-name">{{name}}</h1>

            {{#if description}}
                <div class="tag-description">{{description}}</div>
            {{/if}}

            <div class="tag-post-count">{{plural ../pagination.total empty="" singular="% post" plural="% posts"}}</div>

            {{#if feature_image}}
                <div class="tag-media kg-width-wide">
                    <img srcset="{{> srcset}}" src="{{img_url feature_image size="l"}}" alt="{{name}}">
                </div>
            {{/if}}

        </div>

    </section>
    {{/tag}}

    <div class="post-feed gh-feed gh-canvas">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

    {{pagination}}

</main>